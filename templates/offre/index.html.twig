{% extends 'base.html.twig' %}

{% block title %}Tableau d'Offres{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .btn-custom {
            background-color: #4CAF50;
            border-color: #4CAF50;
        }

        .btn-custom:hover {
            background-color: #45a049;
            border-color: #45a049;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center">Tableau d'Offres</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark text-center">
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Nom Entreprise</th>
                    <th scope="col">Nom Offre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Dates</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for offre in offres %}
                    <tr>
                        <td>{{ offre.id }}</td>
                        <td>{{ offre.nomEntreprise }}</td>
                        <td>{{ offre.nomOffre }}</td>
                        <td>{{ offre.Description }}</td>
                        <td>
                            <ul class="list-unstyled">
                                <li>Email: {{ offre.email }}</li>
                                <li>Téléphone: {{ offre.telephone }}</li>
                            </ul>
                        </td>
                        <td>
                            <strong>Début:</strong> {{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : 'N/A' }}<br>
                            <strong>Fin:</strong> {{ offre.dateLimite ? offre.dateLimite|date('Y-m-d') : 'N/A' }}
                        </td>
                        <td><img src="{{ offre.image }}" alt="Image de l'offre {{ offre.id }}" class="img-thumbnail"
                                 style="max-height: 100px;"></td>
                        <td class="d-flex align-items-center">
                            <button type="button" class="btn btn-primary mr-2" data-toggle="modal"
                                    data-target="#showOffreModal-{{ offre.id }}">
                                Afficher
                            </button>
                            <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-warning mr-2"
                               title="Modifier l'offre {{ offre.id }}">Modifier</a>
                            <a href="{{ path('app_offre_delete', {'id': offre.id}) }}" class="btn btn-danger"
                               title="Supprimer l'offre {{ offre.id }}">Supprimer</a>

                        </td>
                    </tr>

                    <!-- Show Offre Modal -->
                    <div class="modal fade" id="showOffreModal-{{ offre.id }}" tabindex="-1" role="dialog"
                         aria-labelledby="showOffreModalLabel-{{ offre.id }}" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"
                                        id="showOffreModalLabel-{{ offre.id }}">{{ offre.nomOffre }}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <strong>Nom Entreprise:</strong> {{ offre.nomEntreprise }}<br>
                                    <strong>Description:</strong> {{ offre.Description }}<br>
                                    <strong>Contact:</strong>
                                    <ul class="list-unstyled">
                                        <li>Email: {{ offre.email }}</li>
                                        <li>Téléphone: {{ offre.telephone }}</li>
                                    </ul>
                                    <strong>Dates:</strong>
                                    <ul class="list-unstyled">
                                        <li>
                                            <strong>Début:</strong> {{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : 'N/A' }}
                                        </li>
                                        <li>
                                            <strong>Fin:</strong> {{ offre.dateLimite ? offre.dateLimite|date('Y-m-d') : 'N/A' }}
                                        </li>
                                    </ul>
                                    <img src="{{ offre.image }}" alt="Image de l'offre {{ offre.id }}"
                                         class="img-fluid">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Show Offre Modal -->

                {% else %}
                    <tr>
                        <td colspan="8">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <a href="{{ path('app_offre_new') }}" class="btn btn-custom btn-lg" title="Nouvelle offre">Nouvelle
                offre</a>
        </div>
    </div>
{% endblock %}
